rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ユーザードキュメント
    // - 認証済みユーザーは全ユーザーの読み取り可能（フレンド検索、ID重複チェック用）
    // - 書き込みは自分のドキュメントのみ
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // 削除は禁止
    }
    
    // イベント
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        resource.data.ownerId == request.auth.uid;
      
      // イベント内のサブコレクション（locations, messages, photos）
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // イベント招待
    // 注意: クエリで resource.data を評価できないため、readは認証済みなら許可
    match /eventInvitations/{invitationId} {
      allow read: if request.auth != null;
      // 作成時は自分が招待者であること（なりすまし防止）
      allow create: if request.auth != null && 
        request.resource.data.inviterUserId == request.auth.uid;
      allow update, delete: if request.auth != null && (
        resource.data.inviterUserId == request.auth.uid ||
        resource.data.invitedUserId == request.auth.uid
      );
    }
    
    // フレンド関係
    match /friendships/{friendshipId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (
        resource.data.userId1 == request.auth.uid ||
        resource.data.userId2 == request.auth.uid
      );
    }
    
    // フレンド申請
    // 注意: クエリで resource.data を評価できないため、readは認証済みなら許可
    // 実際のフィルタリングはクエリ側（fromUserId/toUserId）で行う
    match /friendRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.fromUserId == request.auth.uid;
      allow update, delete: if request.auth != null && (
        resource.data.fromUserId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid
      );
    }
    
    // ランセッション
    // - 認証済みユーザーは読み取り可能（応援者Web用）
    // - 作成・更新・削除は自分のランのみ
    match /runs/{runId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      
      // ラン内のサブコレクション（locations, photos）
      match /locations/{locationId} {
        allow read: if request.auth != null;
        // 位置情報は自分のランにのみ追加可能
        allow create: if request.auth != null && 
          get(/databases/$(database)/documents/runs/$(runId)).data.userId == request.auth.uid;
        allow update, delete: if false; // 位置情報は変更・削除不可
      }
      
      match /photos/{photoId} {
        allow read: if request.auth != null;
        // 写真は自分のランにのみ追加可能
        allow create: if request.auth != null && 
          get(/databases/$(database)/documents/runs/$(runId)).data.userId == request.auth.uid;
        allow update, delete: if request.auth != null && 
          get(/databases/$(database)/documents/runs/$(runId)).data.userId == request.auth.uid;
      }
    }
  }
}

